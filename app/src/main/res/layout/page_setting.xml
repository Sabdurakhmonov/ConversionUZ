<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <ScrollView
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/icon"
                android:layout_width="60dp"
                android:layout_marginTop="60dp"
                android:layout_height="60dp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:src="@drawable/img_gita"
                />
            <TextView
                android:id="@+id/titles"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/icon"
                android:text="GITA"
                android:textColor="#112061"
                android:textStyle="bold"
                android:textSize="32sp"
                />
            <TextView
                android:id="@+id/title"
                app:layout_constraintTop_toBottomOf="@+id/titles"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="parent"
                android:text="Convertation"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/primary"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"/>
            <TextView
                android:id="@+id/info"
                android:layout_width="0dp"
                android:textSize="14sp"
                android:textColor="@color/primary"
                android:justificationMode="inter_word"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/title"
                app:layout_constraintLeft_toLeftOf="@+id/title"
                android:layout_marginTop="16dp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintHorizontal_bias="0"
                android:layout_marginEnd="16dp"
                android:text="@string/info"/>
            <TextView
                android:id="@+id/text_1"
                android:layout_marginTop="16dp"
                android:textSize="16sp"
                android:textColor="@color/primary"
                app:layout_constraintLeft_toLeftOf="@id/info"
                app:layout_constraintTop_toBottomOf="@id/info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="✅ Coroutine / flow"/>
            <TextView
                android:id="@+id/text_2"
                android:layout_marginTop="16dp"
                android:textSize="16sp"
                android:textColor="@color/primary"
                app:layout_constraintLeft_toLeftOf="@id/info"
                app:layout_constraintTop_toBottomOf="@id/text_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="✅ View Pager2"/>
            <TextView
                android:id="@+id/text_3"
                android:layout_marginTop="16dp"
                app:layout_constraintLeft_toLeftOf="@id/info"
                app:layout_constraintTop_toBottomOf="@id/text_2"
                android:layout_width="wrap_content"
                android:textSize="16sp"
                android:textColor="@color/primary"
                android:layout_height="wrap_content"
                android:text="✅ Recycler View"/>
            <TextView
                android:id="@+id/text_4"
                android:layout_marginTop="16dp"
                app:layout_constraintLeft_toLeftOf="@id/info"
                app:layout_constraintTop_toBottomOf="@id/text_3"
                android:layout_width="wrap_content"
                android:textSize="16sp"
                android:textColor="@color/primary"
                android:layout_height="wrap_content"
                android:text="✅ Navigation Components"/>
            <TextView
                android:id="@+id/text_5"
                android:layout_marginTop="16dp"
                app:layout_constraintLeft_toLeftOf="@id/info"
                app:layout_constraintTop_toBottomOf="@id/text_4"
                android:layout_width="wrap_content"
                android:textSize="16sp"
                android:textColor="@color/primary"
                android:layout_height="wrap_content"
                android:text="✅ Room Database"/>
            <TextView
                android:id="@+id/text_6"
                android:layout_marginTop="16dp"
                android:textSize="16sp"
                android:textColor="@color/primary"
                app:layout_constraintLeft_toLeftOf="@id/info"
                app:layout_constraintTop_toBottomOf="@id/text_5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="✅ Fragment"/>
            <TextView
                android:id="@+id/text_7"
                android:layout_marginTop="16dp"
                app:layout_constraintLeft_toLeftOf="@id/info"
                app:layout_constraintTop_toBottomOf="@id/text_6"
                android:layout_width="wrap_content"
                android:textSize="16sp"
                android:textColor="@color/primary"
                android:layout_height="wrap_content"
                android:text="✅ DI hilt"/>

            <TextView
                android:id="@+id/text_8"
                android:textColor="@color/primary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textStyle="bold"
                android:text="Biz bilan bog'lanish!"
                app:layout_constraintLeft_toLeftOf="@+id/info"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/text_7"/>
            <TextView
                android:foreground="?selectableItemBackgroundBorderless"
                android:clickable="true"
                android:id="@+id/text_9"
                android:focusable="true"
                android:textColor="@color/primary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:text="@string/gita"
                app:layout_constraintLeft_toLeftOf="@+id/info"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/text_8"/>
            <TextView
                android:foreground="?selectableItemBackgroundBorderless"
                android:clickable="true"
                android:id="@+id/text_10"
                android:focusable="true"
                android:textColor="@color/primary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:text="@string/developer"
                app:layout_constraintLeft_toLeftOf="@+id/info"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/text_9"/>

            <TextView
                android:id="@+id/text_11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="34dp"
                android:text="Etiboringiz uchun raxmat!"
                android:textColor="@color/primary"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintLeft_toLeftOf="@+id/info"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/text_10" />
            <View
                android:layout_width="match_parent"
                android:layout_height="100dp"
                app:layout_constraintTop_toBottomOf="@id/text_11"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>